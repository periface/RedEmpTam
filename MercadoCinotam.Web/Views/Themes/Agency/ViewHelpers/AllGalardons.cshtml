@{ Layout = null;}

@model MercadoCinotam.Products.Client.Dtos.GalardonList


<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Productos</h2>
            <h3 class="section-subheading text-muted">Products Innovadores</h3>
        </div>
    </div>
    <div class="row text-center">
        @foreach (var gal in Model.Galardons)
        {
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    @*<i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>*@
                    <img src="@gal.Image" style="width: 112px; height: 112px;"/>
                </span>
                <h4 class="service-heading">@gal.GalardonName</h4>
                @*<p class="text-muted">@product.ProductDescription.Substring(0, 200)</p>*@
            </div>
        }
    </div>
</div>