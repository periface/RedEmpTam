
@model MercadoCinotam.Products.Client.Dtos.ProductList
@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Productos</h2>
            <h3 class="section-subheading text-muted">Productos de alta calidad.</h3>
        </div>
    </div>
    <div class="row">
        @foreach (var product in Model.Products)
        {

            <div class="col-md-4 col-sm-6 portfolio-item">
                <a href="#@product.Id" class="portfolio-link" data-toggle="modal">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="@product.MediumImage" class="img-responsive" alt="">
                </a>
                <div class="portfolio-caption">
                    <h4>@product.ProductName</h4>
                    <p class="text-muted">@product.ProductPrice</p>
                </div>
            </div>
        }
    </div>
</div>
