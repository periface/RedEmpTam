@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" data-servicename="SimpleThemeService" data-printproperty="content" data-property="Custom.MetaTags.Description">
    <meta name="author" content="">
    <meta name="keywords" data-servicename="SimpleThemeService" data-printproperty="content" data-property="Custom.MetaTags.Tags">
    <title>Basic theme landing page</title>
    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="/Views/Themes/SimpleTheme/Assets/css/bootstrap.min.css" type="text/css">
    <!-- Custom Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/Views/Themes/SimpleTheme/Assets/font-awesome/css/font-awesome.min.css" type="text/css">
    <!-- Plugin CSS -->
    <link rel="stylesheet" href="/Views/Themes/SimpleTheme/Assets/css/magnific-popup.css" type="text/css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Views/Themes/SimpleTheme/Assets/css/creative.css" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
