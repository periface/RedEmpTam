
@model MercadoCinotam.Products.Client.Dtos.ProductList
@{
    Layout = null;

    var left = true;
}
<style>
    .details-text {
        margin-top: 40px;
        line-height: 25px;
        font-stretch: semi-condensed;
        font-weight: 100;
    }

    .little-container {
        width: 80%;
        margin: 0 auto;
    }

        .little-container ul {
            margin-top: 30px;
        }

            .little-container ul > li {
                margin: 10px;
                font-weight: 100;
                /* font-stretch: inherit; */
                font-size: 1.1em;
                line-height: 30px;
                list-style: none;
            }
</style>


<div data-source="FeaturedProducts" data-beforesend="beforeSendFunction" data-iterate="products">
    <div data-template="products">
        <div class="col-sm-4">
            <h4 class="text-center" data-iproperty="ProductName"></h4>
            <img class="img-responsive img-rounded" style="" data-iproperty="MediumImage" data-replicate="false" data-printproperty="src" />
            <br />
            <p class="text-center">
                <button class="btn btn-primary btn-sm" data-iproperty="Id" data-printproperty="data-id">Agregar al carro!</button>
            </p>
        </div>
    </div>
</div>


